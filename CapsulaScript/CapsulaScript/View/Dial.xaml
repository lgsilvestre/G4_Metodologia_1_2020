<UserControl x:Class="CapsulaScript.View.Dial"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CapsulaScript.View"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30">
    <Grid IsManipulationEnabled="True" ManipulationDelta="Grid_ManipulationDelta_1">
        <Ellipse Fill="#2E99F7" MaxWidth="28" MaxHeight="28"/>
        <Grid>
            <Grid.RenderTransform>
                <RotateTransform CenterX="13.5" CenterY="13.5" Angle="{Binding Angle}"/>
            </Grid.RenderTransform>
            <Ellipse Fill="White" MinWidth="4" MinHeight="4" MaxHeight="4" MaxWidth="4" HorizontalAlignment="Right" Margin="0,0,3,0"/>

        </Grid>
    </Grid>
</UserControl>
